<% layout("layouts/bolilerplate.ejs") %>
<head>
    <style>
        /* Style for input fields */
        input[type="text"], input[type="url"], input[type="number"], textarea {
            width: 100%; /* Make input fields take full width */
            max-width: 500px; /* Set maximum width */
            padding: 10px; /* Add padding */
            border: 2px solid #333; /* Dark border */
            border-radius: 5px; /* Rounded edges */
            font-size: 16px; /* Increase font size */
        }

        /* Style for textarea */
        textarea {
            height: 100px; /* Increase textarea height */
            resize: vertical; /* Allow vertical resizing */
        }

        /* Style for form container */
        form {
            max-width: 600px; /* Center form with max width */
            margin: auto; /* Center align */
            padding: 20px;
            border: 2px solid #555; /* Form border */
            border-radius: 10px;
            background-color: #f9f9f9;
            box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.2);
        }

        /* Button Styling */
        button {
            padding: 10px 20px;
            background-color:rgb(201, 63, 63);
            color: white;
            font-size: 16px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <h2>Create a New Listing</h2>
    <form action="/listings" method="POST"  class="needs-validation">

    
        <legend>Listing Details</legend>

            <label for="title">Title:</label>
            <input type="text" id="title" name="listing[title]" required maxlength="100" placeholder="Enter listing title" required         

            <label for="description" >Description:</label>
            <textarea id="description" name="listing[description]" required placeholder="Write a short description" required></textarea>
            <br><br>

            <label for="image">Image URL:</label>
            <input type="url" id="image" name="listing[image]" required placeholder="Enter direct image URL (e.g., https://example.com/image.jpg)" />
            <br><br>

            <label for="price">Price (â‚¹ per night):</label>
            <input type="number" id="price" name="listing[price]" required min="1" placeholder="Enter price" required/>
            <br><br>

            <label for="location">Location:</label>
            <input type="text" id="location" name="listing[location]" required placeholder="Enter city or area"required />
            <br><br>

            <label for="country">Country:</label>
            <input type="text" id="country" name="listing[country]" required placeholder="Enter country" required />
            <br><br>

        </fieldset>

        <button type="submit">Create Listing</button>
    </form>
</body>

