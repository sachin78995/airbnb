<% layout("layouts/bolilerplate.ejs") %>

<body>
    <h5 class="card-title"><%= listing.title %></h5>
    <div class="card">
        <img src="<%= listing.image.url %>" class="card-img-top show-image" alt="<%= listing.title %>">
        <div class="card-body">
            <h5 class="card-title">Details</h5>
            <p class="card-text">&#8377; <%= listing.price.toLocaleString("en-IN") %> / night</p>
        </div>
    </div>

    <ul class="listing-details">
        <li><strong>Title:</strong> <%= listing.title %></li>
        <li><strong>Description:</strong> <%= listing.description %></li>
        <li><strong>Price:</strong> &#8377; <%= listing.price.toLocaleString("en-IN") %> / night</li>
        <li><strong>Location:</strong> <%= listing.location %></li>
        <li><strong>Country:</strong> <%= listing.country %></li>
    </ul>

    <br>

    <!-- Edit and Delete Buttons -->
    <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn">Edit the Listing</a>

    <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
        <button type="submit" class="btn delete-btn">Delete this Listing</button>
    </form>
    <hr>
    <div class="review-section">
        <h4>Leave a Review</h4>
        
        <form action="/listings/<%= listing._id %>/review"  method="post" class="review-form needs-validation">
            <!-- Star Rating -->
            <label for="rating">Rating</label>
            <div class="star-rating">
                <input type="radio" name="review[rating]" id="star5" value="5"><label for="star5">&#9733;</label>
                <input type="radio" name="review[rating]" id="star4" value="4"><label for="star4">&#9733;</label>
                <input type="radio" name="review[rating]" id="star3" value="3"><label for="star3">&#9733;</label>
                <input type="radio" name="review[rating]" id="star2" value="2"><label for="star2">&#9733;</label>
                <input type="radio" name="review[rating]" id="star1" value="1"><label for="star1">&#9733;</label>
            </div>
    
            <!-- Comment Box -->
            <label for="comment">Comment</label>
            <textarea name="review[comment]" id="comment" placeholder="Write your review here..."></textarea>
            <div class="invalid-feekback">Please add some comments for review</div>
    
            <!-- Submit Button -->
            <button type="submit">Submit Review</button>
        </form>
        <hr>
        <h4>All Reviews</h4>
        <div class="reviews-container">
           <% if (reviews.length > 0) { %>
              <% reviews.forEach(review => { %>
                 <div class="review-card">
                    <div class="review-header">
                       <h5 class="review-title"><%= review.title || "Untitled Review" %></h5>
                       <p class="review-author">By: <%= review.author || "Anonymous" %></p>
                    </div>
                    <div class="review-body">
                       <p class="review-rating">‚≠ê <%= review.rating || "No rating" %></p>
                       <p class="review-comment"><%= review.comment || "No comment provided" %></p>
                    </div>
        
                    <!-- Delete Review Button -->
                    <form action="/listing/<%= listing._id %>/reviews/<%=review._id %>" method="POST">
                       <button type="submit" class="delete-review-btn">Delete</button>
                    </form>
                 </div>
              <% }); %>
           <% } else { %>
              <p class="no-reviews">No reviews yet.</p>
           <% } %>
        </div>
        
        
    </div>
    
    <style>
        /* Center the content */
        body {
            text-align: center;
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
        }

        h1 {
            font-size: 26px;
            margin-bottom: 20px;
            color: #333;
        }

        /* Card Styling */
        .card {
            max-width: 500px;
            margin: auto;
            background: white;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            text-align: left;
        }

        .card img {
            width: 100%;
            height: 300px;
            object-fit: cover;
        }

        .card-body {
            padding: 15px;
        }

        .card-title {
            font-size: 22px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 18px;
            color: #555;
        }

        /* Listing Details */
        .listing-details {
            list-style-type: none;
            padding: 0;
            max-width: 500px;
            margin: auto;
            background: white;
            padding: 15px;
            border-radius: 8px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            text-align: left;
        }

        .listing-details li {
            padding: 10px 0;
            font-size: 18px;
            color: #333;
            border-bottom: 1px solid #ddd;
        }

        .listing-details li:last-child {
            border-bottom: none;
        }

        /* Buttons */
        .btn {
            display: inline-block;
            margin: 10px;
            padding: 10px 20px;
            font-size: 16px;
            text-decoration: none;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .edit-btn {
            background-color: #007bff;
            color: white;
        }

        .edit-btn:hover {
            background-color: #0056b3;
        }

        .delete-btn {
            background-color: #dc3545;
            color: white;
        }

        .delete-btn:hover {
            background-color: #a71d2a;
        }
    </style>
</body>
