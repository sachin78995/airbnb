    }
}
/* Filters Container */
#filters {
    display: flex;
    gap: 15px;
    align-items: center;
    overflow-x: auto;
    white-space: nowrap;
    padding: 10px 20px;
    background-color: #fff;
    border-bottom: 1px solid #ddd;
}

/* Individual Filter */
.filter {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    width: auto;
    padding: 5px 10px;
    cursor: pointer;
    position: relative;
    transition: color 0.3s ease;
}

/* Icons Styling */
.filter i {
    font-size: 20px; /* Smaller Icons */
    color: #666;
    transition: color 0.3s ease;
}

/* Text Styling */
.filter p {
    margin-top: 4px;
    font-size: 12px;
    font-weight: 500;
    color: #666;
    text-align: center;
}

/* Hover Effect with Underline */
.filter:hover i,
.filter:hover p {
    color: #000;
}

.filter::after {
    content: "";
    width: 0;
    height: 2px;
    background-color: #000;
    position: absolute;
    bottom: -3px;
    left: 50%;
    transform: translateX(-50%);
    transition: width 0.3s ease-in-out;
}

.filter:hover::after {
    width: 100%;
}

/* Active State (Selected Filter) */
.filter.active i,
.filter.active p {
    color: #000;
    font-weight: bold;
}

.filter.active::after {
    width: 100%;
}

/* Responsive Adjustments */
@media (max-width: 768px) {
    #filters {
        gap: 10px;
        padding: 5px 10px;
    }
    .filter i {
        font-size: 18px;
    }
    .filter p {
        font-size: 10px;
    }
}




</style>
  
